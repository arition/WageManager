<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <log4net>
    <root>
      <level value="ALL"/>
      <appender-ref ref="LogMsgAppender"/>
      <appender-ref ref="LogErrorAppender"/>
      <appender-ref ref="ConsoleMsgAppender"/>
      <appender-ref ref="ConsoleErrorAppender"/>
    </root>
    <appender name="LogMsgAppender" type="log4net.Appender.FileAppender">
      <param name="File" value="log.txt"/>
      <param name="AppendToFile" value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="conversionPattern" value="[%date{HH:mm:ss}][%level] %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="INFO" />
        <param name="LevelMax" value="INFO" />
      </filter>
    </appender>
    <appender name="LogErrorAppender" type="log4net.Appender.FileAppender">
      <param name="File" value="err.txt"/>
      <param name="AppendToFile" value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="conversionPattern" value="[%date{HH:mm:ss}][%level] %message%newline%exception" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="WARN" />
        <param name="LevelMax" value="FATAL" />
      </filter>
    </appender>
    <appender name="ConsoleMsgAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <param name="conversionPattern" value="[%date{HH:mm:ss}][%level] %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="DEBUG" />
        <param name="LevelMax" value="INFO" />
      </filter>
    </appender>
    <appender name="ConsoleErrorAppender" type="log4net.Appender.ConsoleAppender">
      <target value="Console.Error" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="conversionPattern" value="[%date{HH:mm:ss}][%level] %message%newline%exception" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="WARN" />
        <param name="LevelMax" value="FATAL" />
      </filter>
    </appender>
  </log4net>
</configuration>
